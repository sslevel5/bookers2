<div class="container">

<div class="col-6 offset-3">
  
<div class="row col-md-10 col-sm-12 m-2">

<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>




</div>

<div class="row">

<div class="col-md-10 col-sm-12 mx-2 mx-sm-auto rounded px-0 m-2">

<%= form_with model: @user do |f| %>

  <div class="form-group">
  <p><label for="inputName">Name</label></p>
  </div>
  
  <div class="form-group">
    <%= f.text_field :name, autofocus: true, id:"inputName", class: 'form-control' %>
  </div>
  
  <p><label for="inputImage">Image</label></p>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  
  <div class="form-group">  
  <p><%= f.label :introduction %></p>
  <%= f.text_area :introduction, id: 'user_introduction', class: 'form-control' %>
  </div>  
  
  <p><%= f.submit "Update User" %></p>
<% end %>

</div>
</div>