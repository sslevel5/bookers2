<div>
  <%= flash[:notice] %>
</div>


<div class="container">
  <div class="row">

    <div class="col-md-3">

  <!-- ユーザー詳細 -->
      <h2>User info</h2>
      <% if @user.present? %>
      <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table table-hover">
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </table>
      <% end %>
      <% if @user == current_user %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>

  <!-- 新規投稿 -->

      <h2>New Book</h2>

      <%= form_with model: Book.new do |f| %>

        <div class="form-group">
        <h4>Title</h4>
        <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
        <h4>Opinion</h4>
        <%= f.text_area :opinion, class: 'form-control' %>
        </div>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">

      <!-- 本の詳細 -->

      <h2>Book detail</h2>
        <table class="table table-hover">

        <tr>
          <td>
          <%= link_to(user_path(@book.user)) do %>
          <%= image_tag @book.user.get_profile_image(70,70) %>
          <br>
          <%= @book.user.name %>
          <% end %>
          </td>
          <td>
          <%= link_to @book.title, book_path(@book.id) %></p>
          </td>
          <td>
          <%= @book.opinion %>
          </td>
        <% if @book.user == current_user %>
          <td>
          <%= link_to "Edit", edit_book_path(@book.id) %>
          </td>
          <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
          </td>
        <% end %>
        </tr>
        </table>
    </div>

  </div>
</div>