<div class="container">

<div class="col-6 offset-3">
  
<div class="row col-md-10 col-sm-12 m-2">
  <h1>Editing Book</h1>
  
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
  
  
</div>

<div class="row">

<div class="col-md-10 col-sm-12 mx-2 mx-sm-auto rounded px-0 m-2">
<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>

  <div class="form-group">
  <p>Title</p>
  <%= f.text_field :title , class: 'form-control'%>
  </div>
  
  <div class="form-group">
  <p>Opinion</p>
  <%= f.text_area :opinion , class: 'form-control' %>
  </div>
  
  <div>
  <%= f.submit 'Update Book' %>
  </div>
  
<% end %>
</div>
</div>

  <div class="row col-md-10 col-sm-12 m-2">
    <p><%= link_to "Show", book_path(@book.id) %><a> | </a><%= link_to "Back", "/books" %></p>
  </div>

</div>
</div>